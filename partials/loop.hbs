{{#foreach posts}}
<article class="{{post_class}}">
    <div class="adjuster">
        {{#if feature_image}}
            <div class="background" style="background-image: url({{feature_image}});"></div>
        {{/if}}
        <div class="borderbox">
            <a href="{{url}}">
                <div class="triangle">
                    <div>VIEW</div>
                </div>
            </a>
        </div>
        <a href="{{url}}">
        	<section>
				<h1>{{primary_tag.name}}</h1>
				<h3 class="post-title">{{{title}}}</h3>
				<p class="intro">{{excerpt words="30"}}...</p>
				<time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM YYYY"}}</time>
                <p class="tags"><span>#</span>{{tags separator="  <span>#</span>" autolink="false"}}</p>
	        </section>
		</a>
    </div>
</article>
{{/foreach}}
